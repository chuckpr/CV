    <i class="fas fa-book-open text-teal-700"></i>
  </div>
  <div class="my-2">
    <ul class="entrylist">
    {% for edu in collections.education reversed %}
      {% assign institute = edu.data %}
      {% assign notes = edu.templateContent %}
      {% include entryitem.liquid %}
    {% endfor %}
    </ul>
  </div>
</section>
