<li class="entry py-1">
  <div class="ml-1">
    <div class="flex flex-row justify-between">
      <div class="font-bold font-sans text-sm text-gray-800">
        {{ institute.position }}
      </div>
      <div class="text-gray-600 text-xs font-mono">{{ institute.begin }}&mdash;{{ institute.end }}</div>
    </div>
    <div class="text-gray-900 text-sm font-light pl-3">{{ institute.institute }}</div>
    {% if notes %}
      <div class="text-gray-700 text-xs pl-5">
      {{ notes }}
      </div>
    {% endif %}
  </div>
</li>
